              </listItem>
              <listItem>
                <para>originator</para>
              </listItem>
              <listItem>
                <para>originatorCode</para>
              </listItem>
              <listItem>
                <para>responsiblePartnerCompany</para>
              </listItem>
              <listItem>
                <para>responsiblePartnerCompanyCode</para>
              </listItem>
              <listItem>
                <para>schema</para>
              </listItem>
